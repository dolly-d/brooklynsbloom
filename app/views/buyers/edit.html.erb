<h1>Edit Account</h1>

<%= form_for @buyer do |f|  %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_area :address %>

  <%= f.label :password %>
  <%= f.text_area :password %>

  <%= f.label :img_url %>
  <%= f.text_field :img_url %>

  <%= f.submit %>
<% end %>