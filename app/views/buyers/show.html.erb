<h1>Show Page</h1>
<div class="index-container">
<div class="index-tile">
<p>Name: <%= @buyer.name%></p>
<p>Address: <%= @buyer.address %></p>
<img class="index-img" src="<%=@buyer.img_url%>" alt="profile pic">

<h2>My Plants</h2>

<% @buyer.plants.each do |plant| %>
  <li> <%= link_to plant.name, plant_path(plant.id) %> </li>
<% end %>
</div>
</div>

<%= link_to "Edit Profile", edit_buyer_path(@buyer) %>

<%= button_to "Delete Profile", buyer_path(@buyer), method: :delete %>
